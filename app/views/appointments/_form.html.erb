      <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, I18n.t('title') %><br>
    <%= f.text_field :title %>
  </div>
  <br>

  <div class="field">
    <%= f.label :description, I18n.t('description') %><br>
    <%= f.text_area :description %>
  </div>
  <br>

  <div class="field">
    <%= f.label :scheduled_date, I18n.t('scheduled_date') %><br>
    <%= f.datetime_select :scheduled_date %>
  </div>
  <br>

  <div class="field">
    <%= f.label :client_id, I18n.t('client') %><br>
    <%= f.collection_select(:client_id, @clients, :id, :company_name, prompt: true) %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
